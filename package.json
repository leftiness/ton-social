{
	"name": "ton-social",
	"version": "0.0.1",
	"description": "ton-social is a site!",
	"main": "server.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/leftiness/ton-social"
	},
	"authors": "Brandon Parmenter <leftiness@gmail.com>",
	"license": "MIT",
	"private": false,
	"engines": {
		"node": "4.1.1"
	},
	"browserify": {
		"transform": [
			"jadeify",
			"coffeeify",
			"html2js-browserify",
			"debowerify"
		]
	},
	"scripts": {
		"build:dev": "npm-run-all clean:fast -p bundle:* -p start watch:*",
		"build:full": "npm-run-all build:prod -p start watch:*",
		"build:prod": "npm-run-all clean:full -p vendor:* bundle:*",
		"bundle:css": "lessc ./app/app.less ./dist/app.css",
		"bundle:index": "jade -P ./app/index.jade -o ./dist/",
		"bundle:js": "sh ./bin/bundle-js.sh",
		"clean:fast": "find ./dist/* ! -iname 'vendor*' ! -iname 'font*' | xargs rm -rf",
		"clean:full": "rm -rf ./dist/*",
		"start": "node server.js",
		"vendor:css": "sh ./bin/vendor-css.sh",
		"vendor:fonts": "cp -r ./bower_components/font-awesome/fonts ./dist/fonts",
		"vendor:js": "sh ./bin/vendor-js.sh",
		"watch:css": "onchange ./app/**/*.less -- npm run bundle:css",
		"watch:index": "onchange ./app/index.jade -- npm run bundle:index",
		"watch:js": "sh ./bin/watch-js.sh"
	},
	"devDependencies": {
		"browserify": "^11.2.0",
		"coffeeify": "^1.1.0",
		"debowerify": "^1.3.1",
		"html2js-browserify": "^1.0.0",
		"jade": "^1.11.0",
		"jadeify": "^4.4.0",
		"less": "^2.5.3",
		"npm-run-all": "^1.2.11",
		"onchange": "^2.0.0",
		"watchify": "^3.4.0"
	},
	"dependencies": {
		"express": "^4.13.3"
	}
}
