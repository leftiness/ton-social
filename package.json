{
	"name": "ton-social",
	"version": "0.0.1",
	"description": "ton-social is a site!",
	"main": "main.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/leftiness/ton-social"
	},
	"authors": "Brandon Parmenter <leftiness@gmail.com>",
	"license": "MIT",
	"private": false,
	"engines": {
		"node": "4.1.1"
	},
	"browserify": {
		"transform": [
			"jadeify",
			"coffeeify",
			"html2js-browserify",
			"debowerify"
		]
	},
	"scripts": {
		"build:dev": "bash ./bin/build-dev.sh",
		"build:full": "bash ./bin/build-full.sh",
		"build:prod": "bash ./bin/build-prod.sh",
		"bundle:css": "bash ./bin/bundle-css.sh",
		"bundle:index": "bash ./bin/bundle-index.sh",
		"bundle:js": "bash ./bin/bundle-js.sh",
		"bundle:main": "bash ./bin/bundle-main.sh",
		"bundle:server": "bash ./bin/bundle-server.sh",
		"clean:fast": "bash ./bin/clean-fast.sh",
		"clean:full": "bash ./bin/clean-full.sh",
		"postinstall": "bash ./bin/postinstall.sh",
		"restart:dev": "bash ./bin/restart-dev.sh",
		"start": "bash ./bin/start.sh",
		"start:dev": "bash ./bin/start-dev.sh",
		"stop": "bash ./bin/stop.sh",
		"vendor:css": "bash ./bin/vendor-css.sh",
		"vendor:fonts": "bash ./bin/vendor-fonts.sh",
		"vendor:js": "bash ./bin/vendor-js.sh",
		"watch:css": "bash ./bin/watch-css.sh",
		"watch:index": "bash ./bin/watch-index.sh",
		"watch:js": "bash ./bin/watch-js.sh",
		"watch:server": "bash ./bin/watch-server.sh"
	},
	"devDependencies": {
		"bower": "^1.6.2",
		"browserify": "^11.2.0",
		"coffee-script": "^1.10.0",
		"coffeeify": "^1.1.0",
		"debowerify": "^1.3.1",
		"html2js-browserify": "^1.0.0",
		"jade": "^1.11.0",
		"jadeify": "^4.4.0",
		"less": "^2.5.3",
		"npm-run-all": "^1.2.11",
		"onchange": "^2.0.0",
		"watchify": "^3.4.0"
	},
	"dependencies": {
		"express": "^4.13.3",
		"pm2": "^0.15.7"
	}
}
