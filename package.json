{
	"name": "ton-social",
	"version": "0.0.1",
	"description": "ton-social is a site!",
	"main": "server.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/leftiness/ton-social"
	},
	"authors": "Brandon Parmenter <leftiness@gmail.com>",
	"license": "MIT",
	"private": false,
	"engines": {
		"node": "4.1.1"
	},
	"browserify": {
		"transform": [
			"html2js-browserify",
			"debowerify"
		]
	},
	"scripts": {
		"build:dev": "npm-run-all clean:dev -p copy:* bundle:* -p start watch:*",
		"build:prod": "npm-run-all clean:prod -p copy:* vendor:* bundle:*",
		"bundle:js": "sh ./bin/bundle-js.sh",
		"bundle:css": "lessc ./app/app.less ./dist/app.css",
		"clean:dev": "find ./dist/* ! -name 'vendor.*' | xargs rm",
		"clean:prod": "rm -rf ./dist/*",
		"copy:index": "cp ./app/index.html ./dist/index.html",
		"start": "node server.js",
		"vendor:css": "sh ./bin/vendor-css.sh",
		"vendor:js": "sh ./bin/vendor-js.sh",
		"watch:css": "onchange ./app/**/*.less -- npm run bundle:css",
		"watch:index": "onchange ./app/index.html -- npm run copy:index",
		"watch:js": "sh ./bin/watch-js.sh"
	},
	"devDependencies": {
		"browserify": "^11.2.0",
		"debowerify": "^1.3.1",
		"html2js-browserify": "^1.0.0",
		"less": "^2.5.3",
		"npm-run-all": "^1.2.11",
		"onchange": "^2.0.0",
		"watchify": "^3.4.0"
	},
	"dependencies": {
		"express": "^4.13.3"
	}
}
